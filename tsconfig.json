{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "backend/src/**/*",
    "frontend/src/**/*",
    "packages/**/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

